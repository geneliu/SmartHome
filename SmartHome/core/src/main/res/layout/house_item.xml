<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/slikaKuce"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_home_black_24dp"
        android:contentDescription="@string/house_icon_description" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/slikaKuce"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/nazivKuce"
            android:layout_marginRight="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:paddingRight="16dp"
            android:text="@string/sample_naziv_kuce"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adresaKuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="@string/sample_adresa_kuce"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"/>


    </LinearLayout>
    <ImageView
        android:id="@+id/img_uredi_kucu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_create_black_24dp"
        android:contentDescription="@string/house_icon_description" />

</RelativeLayout>