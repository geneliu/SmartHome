<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/houseImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_home_black_24dp"
        android:contentDescription="@string/house_icon_description" />

    <LinearLayout
        android:id="@+id/house_item_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/houseImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="72dp">

        <TextView
            android:id="@+id/houseName"
            android:layout_marginRight="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:paddingRight="16dp"
            android:text="@string/sample_house_name"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/houseAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="@string/sample_house_address"
            android:layout_marginTop="3dp"
            android:layout_marginRight="40dp"/>


    </LinearLayout>
    <ImageView
        android:id="@+id/img_edit_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create_black_24dp"
        android:contentDescription="@string/house_icon_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="21dp" />

</RelativeLayout>